<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关于作者"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Github"
                        android:id="@+id/dzr_author_github"
                        style="@style/style_author_items"
                        android:drawableTop="@drawable/icon_aboutme_github"/>
                    <TextView
                        android:text="新浪微博"
                        android:id="@+id/dzr_author_sina"
                        style="@style/style_author_items"
                        android:drawableTop="@drawable/icon_aboutme_sina"/>
                    <TextView
                        android:text="豆瓣"
                        android:id="@+id/dzr_author_douban"
                        style="@style/style_author_items"
                        android:drawableTop="@drawable/icon_aboutme_douban"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="博客园"
                        android:id="@+id/dzr_author_cnblog"
                        style="@style/style_author_items"
                        android:drawableTop="@drawable/icon_aboutme_cnblog"/>
                    <TextView
                        android:text="我的作品"
                        android:id="@+id/dzr_author_works"
                        style="@style/style_author_items"
                        android:drawableTop="@drawable/icon_aboutme_works"/>
                    <TextView
                        android:text="我的组织"
                        android:id="@+id/dzr_author_hope"
                        style="@style/style_author_items"
                        android:drawableTop="@drawable/icon_aboutme_hope"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="更多..."
                        android:id="@+id/dzr_author_more"
                        style="@style/style_author_items"
                        android:drawableTop="@drawable/icon_aboutme_more"/>
                    <TextView
                        android:text=""
                        style="@style/style_author_items"/>
                    <TextView
                        android:text=""
                        style="@style/style_author_items"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

    <include android:layout="@layout/footer_menu"/>
</RelativeLayout>